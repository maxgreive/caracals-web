---
import { Image } from "astro:assets";
import { getImageFromFrontmatter } from "../utils/getImage";
const { frontmatter, containerClasses } = Astro.props;
import trainingImage from '../assets/images/training.jpg';
const galleryImages = frontmatter.gallery.map((image: { image: string; }) => ({
  ...image,
  image: getImageFromFrontmatter(image.image)
}));
---
<section id="result" class:list={["relative", "z-10", "bg-black", "pb-20", "md:top-0", "lg:pt-20", ...containerClasses]}>
    <div class="space-y-3 md:space-y-6 xl:px-6">
        {
            galleryImages && galleryImages[2] &&
            <Image src={ galleryImages?.[2]?.image } alt={galleryImages?.[2]?.caption } width={ galleryImages?.[2]?.width } height={ galleryImages?.[2]?.height } layout="constrained" loading="lazy" />
        }
        <div class="relative">
            <div class="absolute flex inset-0 z-10 m-auto h-max w-max">
                <div class="mx-auto max-w-7xl px-6 lg:px-12 xl:px-6 2xl:px-0">
                    <div class="flex flex-wrap items-center gap-6">
                        <h2 class="text-shadow-lg font-bold text-white text-4xl lg:text-7xl xl:text-9xl">Sei dabei!</h2>
                        <span class="h-max rounded-full border border-white/40 px-2 py-1 text-xs tracking-wider text-white">03</span>
                    </div>
                    <div class="mt-12 ml-auto text-lg font-light text-white">
                        <p class="text-shadow-lg">Das Training ist f√ºr jede/n was</p>
                        <a href="/training" class="mt-12 inline-block rounded-full bg-black px-6 py-3 text-base font-semibold text-white transition duration-300 hover:bg-white hover:text-black">Termine checken</a>
                    </div>
                </div>
            </div>
            <Image class="h-full w-full object-cover" src={ trainingImage } alt="cover" width={ trainingImage.width } height={ trainingImage.height } />
        </div>
    </div>
</section>