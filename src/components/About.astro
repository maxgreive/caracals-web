---
import { Picture } from 'astro:assets';
import { getImageFromFrontmatter } from '../utils/getImage.ts';
import MarkdownIt from "markdown-it";

const { frontmatter } = Astro.props;
const md = new MarkdownIt();
const year = new Date().getFullYear() - 2008;
const aboutImage = getImageFromFrontmatter(frontmatter.about.image);
---
<section id="about" class="relative z-10 bg-black pb-20 pt-32 md:pb-0 md:pt-0 lg:pb-0">
  <div class="mx-auto max-w-7xl px-6 lg:px-12 xl:px-6 2xl:px-0">
      <div data-rellax-speed="-0.4" data-rellax-xs-speed="0" data-rellax-mobile-speed="0" class="rellax flex flex-wrap items-center gap-6">
          <h2 class="text-7xl font-bold text-white xl:text-8xl">{ frontmatter.about.title }</h2>
          <span class="h-max rounded-full border border-white/40 px-2 py-1 text-xs tracking-wider text-white">{ year } Years</span>
      </div>
      <div class="mt-24 md:mt-72">
          <div class="grid gap-6">
              <div class="grid md:grid-cols-3">
                  <div class="overflow-hidden md:col-span-2">
                      <Picture src={ aboutImage } layout="constrained" alt="unnamed duo" width={1620} height={1090}/>
                  </div>
              </div>
              <div data-rellax-speed="1" data-rellax-xs-speed="0" data-rellax-mobile-speed="0" data-rellax-tablet-speed="0.5" class="rellax ml-auto md:w-3/5 lg:w-2/5">
                  <div class="mt-12 text-2xl font-light text-white" set:html={md.render(frontmatter.about.text)} />
              </div>
          </div>
      </div>
  </div>
</section>