---
const {frontmatter} = Astro.props;
---
<section id="approach" class="relative z-10 bg-black py-20 md:sticky md:top-12">
    <a href={`/teams/${frontmatter?.nextTeam?.handle}`} class="block bg-gradient-to-b from-transparent to-white/10 py-32">
        <div class="mx-auto max-w-7xl px-6 lg:px-12 xl:px-6 2xl:px-0">
            <div class="flex">
                <div class="w-full">
                    <span class="mx-auto block h-max w-max rounded-full border border-white/40 px-2 py-1 text-xs tracking-wider text-white">Next team</span>
                    <h2 class="text-center text-7xl font-bold text-white xl:text-8xl">{frontmatter?.nextTeam?.title}</h2>
                </div>
            </div>
        </div>
    </a>
</section>