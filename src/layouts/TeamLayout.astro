---
import MainLayout from "./MainLayout.astro";
import ProjectHeader from "../components/ProjectHeader.astro";
import Introduction from "../components/Introduction.astro";
import Overview from "../components/Overview.astro";
import Approach from "../components/Approach.astro";
import CallToAction from "../components/CallToAction.astro";
import NextTeam from "../components/NextTeam.astro";
import Footer from "../components/Footer.astro";
import "../assets/css/custom.css";
const { frontmatter } = Astro.props;
const maxWidthClasses = ["max-w-screen-2xl", "mx-auto"]
---

<MainLayout>
    {frontmatter.title && frontmatter.featuredImage && <ProjectHeader {frontmatter} containerClasses={maxWidthClasses} />}
    {frontmatter.introduction && <Introduction {frontmatter} />}
    {frontmatter.gallery && <Overview {frontmatter} />}
    {frontmatter.main && <Approach {frontmatter} />}
    <CallToAction {frontmatter} containerClasses={maxWidthClasses} />
    {frontmatter.nextTeam && <NextTeam {frontmatter} />}
    <Footer containerClasses={["z-10", "pt-8"]} />
</MainLayout>
